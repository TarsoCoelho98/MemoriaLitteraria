@section Scripts {
    <script src="~/js/home.js"></script>
    <script src="~/js/section.js"></script>
}

<div class="container mt-5" style="max-width: 700px;">
    <div class="input-group">
        <input id="inpSearch" type="text" class="form-control" maxlength="60" placeholder="Digite um trecho de sua obra favorita" />
        <button id="btnSearch" class="btn btn-outline-secondary" type="button" disabled>Buscar</button>
        <button id="btnBack" class="btn btn-outline-secondary" type="button" hidden>Voltar</button>
    </div>
    <div id="resultsContainer" class="mt-4"></div>
    <div id="contentContainer" class="mt-4" hidden>
        @await Html.PartialAsync("_Section")
    </div>
</div>

